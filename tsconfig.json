{
    "typeRoots": ["src/types.d.ts" ],
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "experimentalDecorators": true,
        "lib": ["dom", "esnext"]
    },
    "exclude": ["node_modules", "dist"],
    "include": [
      "./src/**/*.ts",
      "./src/**/*.vue",
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
}
  